{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}

{% block page_product_detail_buy %}
    {{ parent() }}

    {% set linkedElement = page.extensions.nodeLinkedProduct ?? null %}
    {% if linkedElement and linkedElement.product %}
        <div class="node-linked-product-wrapper">
            {% sw_include '@Storefront/storefront/component/node-linked-product/teaser.html.twig' with { linkedProduct: linkedElement.product } %}
        </div>
    {% endif %}
{% endblock %}

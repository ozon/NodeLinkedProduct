<!-- src/Resources/config/services.xml -->
<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="false" public="false" />

        <service id="Node\LinkedProduct\Core\Service\LinkedProductLoader">
            <argument type="service" id="sales_channel.product.repository" />
        </service>

        <!-- Wichtig: richtiger Tag -->
        <service id="Node\LinkedProduct\Cms\Element\LinkedProductCmsResolver">
            <tag name="shopware.cms.data_resolver" />
        </service>

        <service id="Node\LinkedProduct\Storefront\Subscriber\ProductPageSubscriber">
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
